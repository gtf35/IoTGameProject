<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@drawable/class_5_2_bg_environment"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/class_5_2_btn_monitoring_select" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/class_5_2_bg_frame_descend_setting"
        android:padding="30dip"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@+id/imageView1"
        android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="2"
            >

            <WebView
                android:id="@+id/webView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0.0dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/class_5_2_btn_direction_bg" >

                <ImageView
                    android:id="@+id/imgLeft"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="myClick"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/class_5_2_btn_left_press" />

                <ImageView
                    android:id="@+id/imgDown"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="myClick"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/class_5_2_btn_down_press" />

                <ImageView
                    android:id="@+id/imgUp"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="myClick"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/class_5_2_btn_up_press" />

                <ImageView
                    android:id="@+id/imgRight"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:onClick="myClick"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/class_5_2_btn_right_press" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>